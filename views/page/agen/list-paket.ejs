<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Pengiriman</title>
</head>

<body>
    <h1>Daftar Pengiriman</h1>
    <p>User: <%= user.email %>
    </p>

    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nama Pengirim</th>
                <th>No HP Pengirim</th>
                <th>Deskripsi</th>
                <th>Berat</th>
                <th>Dimensi</th>
                <th>Jumlah Kiriman</th>
                <th>Nama Penerima</th>
                <th>No HP Penerima</th>
                <th>Alamat Tujuan</th>
                <th>Kecamatan</th>
                <th>Kelurahan</th>
                <th>Nomor Resi</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            <% deliveries.forEach(function(delivery) { %>
                <tr>
                    <td>
                        <%= delivery.ID_Data_Penerimaan_Paket %>
                    </td>
                    <td>
                        <%= delivery.Nama_Pengirim %>
                    </td>
                    <td>
                        <%= delivery.No_HP_Pengirim%>
                    </td>
                    <td>
                        <%= delivery.Deskripsi %>
                    </td>
                    <td>
                        <%= delivery.Berat %>
                    </td>
                    <td>
                        <%= delivery.Dimensi %>
                    </td>
                    <td>
                        <%= delivery.Jumlah_Kiriman %>
                    </td>
                    <td>
                        <%= delivery.Nama_Penerima %>
                    </td>
                    <td>
                        <%= delivery.No_HP_Penerima %>
                    </td>
                    <td>
                        <%= delivery.Alamat_Tujuan %>
                    </td>
                    <td>
                        <%= delivery.kecamatan %>
                    </td>
                    <td>
                        <%= delivery.kelurahan %>
                    </td>
                    <td>
                        <%= delivery.nomor_resi %>
                    </td>
                    <td>
                        <%= delivery.createdAt%>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</body>

</html>