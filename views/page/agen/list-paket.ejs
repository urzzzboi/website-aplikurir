<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Paket</title>
    <link rel="stylesheet" href="css/custom-style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

</head>

<body>
    <div class="header">
        <div class="back-btn">
            <a href="/agen">
                <i class="fas fa-arrow-left fa-lg"></i><span class="btn-text">Kembali</span>
            </a>
        </div>
    </div>
    <main>
        <div class="container">
            <div class="info">
                <h1>List of Deliveries</h1>
                <a class="btn-paket" href="/">Create New Delivery</a>
            </div>
            <table>
                <tr>
                    <th>ID</th>
                    <th>Nama Pengirim</th>
                    <th>No HP Pengirim</th>
                    <th>Deskripsi</th>
                    <th>Berat</th>
                    <th>Dimensi</th>
                    <th>Jumlah Kiriman</th>
                    <th>Nama Penerima</th>
                    <th>No HP Penerima</th>
                    <th>Alamat Tujuan</th>
                    <th>Created At</th>
                </tr>
                <% deliveries.forEach(function(delivery) { %>
                    <tr>
                        <td><%= delivery.id %></td>
                        <td><%= delivery.nama_pengirim %></td>
                        <td><%= delivery.no_hp_pengirim %></td>
                        <td><%= delivery.deskripsi %></td>
                        <td><%= delivery.berat %></td>
                        <td><%= delivery.dimensi %></td>
                        <td><%= delivery.jumlah_kiriman %></td>
                        <td><%= delivery.nama_penerima %></td>
                        <td><%= delivery.no_hp_penerima %></td>
                        <td><%= delivery.alamat_tujuan %></td>
                        <td><%= delivery.created_at %></td>
                    </tr>
                <% }); %>
            </table>
        </div>
    </main>

</html>