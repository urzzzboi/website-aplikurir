<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Akun</title>
    <link rel="icon" href="/img/logo-icon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/list_akun.css">
    <link rel="stylesheet" href="/css/custom-style.css">
    <!-- <link rel="stylesheet" href="/css/riwayat.css"> -->
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .container {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            margin: 20px;
        }

        .container h2 {
            color: rgb(134, 167, 137);
            font-size: 14pt;
        }

        .content {
            display: flex;
            flex: 1;
            overflow: hidden;
        }

        aside.sidebar {
            width: 20%;
            padding: 10px;
        }

        .sidebar a {
            color: #333;
            text-decoration: none;
        }

        .button-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-bottom: 10px;
        }

        .button-container button {
            padding: 10px 20px;
            border: none;
            background-color: rgb(235, 243, 232);
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .button-container button.active,
        .button-container button:hover {
            background-color: rgb(134, 167, 137);
            color: rgb(235, 243, 232);
        }

        .user-list {
            flex: 1;
            overflow-y: auto;
            padding: 20px 0;
            border: none;
            margin-bottom: 10px;
            height: 300px;
        }

        .user-list::-webkit-scrollbar {
            width: 10px;
            height: 10px;
        }

        .user-list::-webkit-scrollbar-thumb {
            background: rgb(134, 167, 137);
            border: 2px solid rgb(235, 243, 232);
            border-radius: 10px;
        }

        .user-list::-webkit-scrollbar-track {
            background: rgb(235, 243, 232);
            border-radius: 10px;
        }

        .user-list::-webkit-scrollbar-thumb:hover {
            background: rgb(134, 167, 145);
        }

        .user-list li {
            width: 60%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 8px;
            margin-bottom: 8px;
            background-color: rgb(235, 243, 232);
            border-radius: 5px;
        }

        .user-list li span {
            font-size: 18px;
        }

        .user-list li button {
            background: none;
            border: none;
            color: red;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="header">
        <div class="back-btn">
            <a href="/pendaftaran">
                <i class="fas fa-arrow-left fa-lg"></i><span class="btn-text">Kembali</span>
            </a>
        </div>
    </div>
    <div class="container">
        <h2>List Akun</h2>
        <div class="content">
            <aside class="sidebar">
                <form action="/fetch-users" method="post">
                    <div class="button-container">
                        <button type="submit" name="userType" value="kurir">Kurir</button>
                        <button type="submit" name="userType" value="agen">Agen</button>
                        <button type="submit" name="userType" value="karyawan">Karyawan Gudang</button>
                    </div>
                </form>
            </aside>
            <div class="line-center"></div>
            <% if (typeof users !=='undefined' && users.length> 0) { %>
                <div class="user-list">
                    <ul>
                        <% users.forEach(function(user) { %>
                            <li>
                                <span><i class="fas fa-user"></i>
                                    <%= user.nama || user.email %>
                                </span>
                                <form action="/delete-user/<%= userType === 'kurir' ? user.id_kurir : user.id %>"
                                    method="post">
                                    <input type="hidden" name="userType" value="<%= userType %>">
                                    <button type="submit"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </li>
                            <% }); %>
                    </ul>
                </div>
                <% } else { %>
                    <p>Pilih jenis pengguna untuk melihat daftar akun.</p>
                    <% } %>
        </div>
    </div>

</body>

</html>