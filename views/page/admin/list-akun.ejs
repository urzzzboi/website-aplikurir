<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Akun</title>
    <link rel="icon" href="/img/logo-icon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/list_akun.css">
    <link rel="stylesheet" href="/css/custom-style.css">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        .header {
            display: flex;
            align-items: center;
            padding: 10px 0;
        }

        .header h1 {
            flex-grow: 1;
            font-size: 24px;
        }

        .header a {
            text-decoration: none;
            color: #333;
        }

        .button-container {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .button-container button {
            padding: 10px 20px;
            border: none;
            background-color: #e0e0e0;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .button-container button.active,
        .button-container button:hover {
            background-color: #4caf50;
            color: white;
        }

        .user-list {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .user-list li {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 8px;
            /* Mengurangi padding */
            margin-bottom: 8px;
            /* Menambahkan margin bawah */
            background-color: #e8f5e9;
            border-radius: 5px;
        }

        .user-list li span {
            font-size: 18px;
        }

        .user-list li button {
            background: none;
            border: none;
            color: red;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="header">
        <div class="back-btn">
            <a href="/pendaftaran">
                <i class="fas fa-arrow-left fa-lg"></i><span class="btn-text">Kembali</span>
            </a>
        </div>
    </div>
    <main>
        <div class="container">
            <h1>Daftar Akun</h1>

            <!-- Form untuk memilih jenis pengguna -->
            <form action="/fetch-users" method="post">
                <div class="button-container">
                    <button type="submit" name="userType" value="kurir">Kurir</button>
                    <button type="submit" name="userType" value="agen">Agen</button>
                    <button type="submit" name="userType" value="karyawan">Karyawan Gudang</button>
                </div>
            </form>

            <!-- Tampilkan daftar pengguna jika variabel users telah didefinisikan -->
            <% if (typeof users !=='undefined' && users.length> 0) { %>
                <div class="user-list">
                    <ul>
                        <% users.forEach(function(user) { %>
                            <li>
                                <span><i class="fas fa-user"></i> <%= user.nama || user.email %></span>
                                <!-- Form untuk menghapus pengguna -->
                                <form action="/delete-user/<%= userType === 'kurir' ? user.id_kurir : user.id %>" method="post">
                                    <input type="hidden" name="userType" value="<%= userType %>">
                                    <button type="submit"><i class="fas fa-trash-alt"></i></button>
                                </form>                                                           
                            </li>
                        <% }); %>
                    </ul>
                </div>
                <% } else { %>
                    <p>Pilih jenis pengguna untuk melihat daftar akun.</p>
                    <% } %>
        </div>
    </main>
</body>

</html>