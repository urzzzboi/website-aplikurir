<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login - ApliKurir</title>
  <link rel="icon" href="img/logo-icon.png" type="image/x-icon">
  <link rel="stylesheet" href="https://bulma.io/vendor/fontawesome-free-5.15.2-web/css/all.min.css" />
  <link rel="stylesheet" href="https://www.unpkg.com/bulma@0.9.3/css/bulma.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="css/custom-style.css">
  <link rel="stylesheet" href="css/login-style.css">
</head>

<body>
  <form action="/login" class="form-login" method="post">
    <div class="logo">
      <img src="img/logo.png" alt="Logo_Perusahaan">
    </div>
    <div class="input-container">
        <label for="user-type">Status:</label>
        <select id="user-type" name="status">
            <option value="admin">Admin</option>
            <option value="agen">Agen</option>
            <option value="pegawai">Pegawai Gudang</option>
        </select>
    </div>
    <div class="input-container">
      <input class="input" type="text" placeholder="Email" name="email" value="<%= user != null ? user.email : "" %>" />
    </div>
    <div class="input-container">
      <input class="input" id="password" type="password" placeholder="Password" name="password"
        value="<%= user != null ? user.password : "" %>" />
      <span class="toggle-password" onclick="showPassword()">
        <i class="far fa-eye"></i>
      </span>
    </div>
    <% if (message) { %>
      <div class="field">
        <span class="tag is-link is-danger">
          <%= message %>
        </span>
      </div>
      <% } %>
        <p class="control">
          <button class="green-btn" type="submit">Masuk</button>
        </p>
  </form>
  <script>
    function showPassword() {
      const passwordInput = document.getElementById('password');
      const passwordIcon = document.querySelector('.toggle-password i');

      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        passwordIcon.classList.remove('far', 'fa-eye');
        passwordIcon.classList.add('fas', 'fa-eye-slash');
      } else {
        passwordInput.type = 'password';
        passwordIcon.classList.remove('fas', 'fa-eye-slash');
        passwordIcon.classList.add('far', 'fa-eye');
      }
    }
  </script>
</body>

</html>